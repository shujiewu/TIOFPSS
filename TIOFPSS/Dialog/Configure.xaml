                     VerticalContentAlignment="Center"
                     Text=""
                     Style="{StaticResource LabelOpenFolderTextBox}" />

                <TextBox x:Name="CreoPath"
                     local:ControlAttachProperty.Label="Creo 启动路径"
                     MinWidth="100"
                     Grid.Row="2" Grid.Column="0" 
                     Width="450"
                     Height="25"
                     Margin="0,15,0,0"
