                     VerticalContentAlignment="Center"
                     Text=""
                     Style="{StaticResource LabelOpenFolderTextBox}" />

                <xly:FButton Grid.Row="3" Margin="180,10,0,0"  Content="确定" Height="25" Width="80" Click="Button_Click_3" FIcon=""/>
                <xly:FButton Grid.Row="3" Margin="370,10,0,0"  Content="取消" Width="80" Height="25" Click="Button_Click_4" FIcon=""/>
